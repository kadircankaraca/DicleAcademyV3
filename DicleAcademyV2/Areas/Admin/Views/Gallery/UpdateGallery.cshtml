@model GalleryDto
<div class="container-fluid">
    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Admin</a></li>
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Gallery</a></li>
                        <li class="breadcrumb-item active">Gallery Göster</li>
                    </ol>
                </div>
                <h4 class="page-title">Gallery Göster</h4>
            </div>
        </div>
    </div>
    <!-- end page title -->
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="header-title">Gallery Göster</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive-sm">
                        <table class="table table-striped table-centered mb-0">
                            <thead>
                                <tr>
                                    <th>Fotoğraf</th>
                                    <th>Yeni Fotoğraf</th>
                                    <th style="text-align: right;">Güncelle / Sil</th>
                                </tr>
                            </thead>
                            <tbody>

                                <tr>
                                    <form method="post" action="/Gallery/UpdateGalleryPost" enctype="multipart/form-data">
                                    <td class="table-user">
                                        <img src="~/Images/GalleryImages/@Model.GalleryImage" alt="table-user"
                                             class="me-2 rounded-circle" />
                                    </td>
                                    <td>
                                        <input type="file" name="newGalleryImage" class="form-control">
                                    </td>
                                    <td style="text-align: right;">
                                        <input type="hidden" name="GalleryId" value="@Model.GalleryId" />
                                        <button type="submit" class="btn btn-link text-reset fs-16 px-1">Onayla</button>
                                    </td>
                                    </form>
                                </tr>

                            </tbody>
                        </table>
                    </div> <!-- end table-responsive-->
                </div> <!-- end card body-->
            </div> <!-- end card -->
        </div><!-- end col-->
    </div><!-- end row-->
</div> <!-- container -->

<script>
    var data = document.getElementById("bag").value;
    console.log("DATA " + data);
    if (data == "Başarılı") {
        swal("Gallery Başarıyla Silindi", {
            icon: "success",
            button: "Tamam!",
        });
    } else if (data == "Başarısız") {
        swal("Hata oluştu daha sonra tekrar deneyin!", {
            icon: "error",
            button: "Tamam!",
        });
    }
</script>