@model List<InstructorsDto>
<div class="container-fluid">

    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Admin</a></li>
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Instructor</a></li>
                        <li class="breadcrumb-item active">Instructor Göster</li>
                    </ol>
                </div>
                <h4 class="page-title">Instructor Göster</h4>
            </div>
        </div>
    </div>
    <!-- end page title -->

    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="header-title">Instructor Göster</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive-sm">
                        <table class="table table-striped table-centered mb-0">
                            <thead>
                                <tr>
                                    <th>İsim</th>
                                    <th>Açıklama</th>
                                    <th>Uzmanlık Alanı</th>
                                    <th>Resim</th>
                                    <th>Twitter Hesabı</th>
                                    <th>Facebook Hesabı</th>
                                    <th>Instagram Hesabı</th>
                                    <th style="text-align: right;">Güncelle / Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var instructor in Model)
                                {
                                    <tr>
                                        <td>@instructor.InstructorName</td>
                                        <td>@instructor.InstructorDescription</td>
                                        <td>@instructor.AreaOfExpertise</td>
                                        <td class="table-user">
                                            <img src="~/Images/InstructorImages/@instructor.InstructorImage" alt="Instructor Image" class="me-2 rounded-circle" />
                                        </td>
                                        <td>@instructor.TwitterAccountURL</td>
                                        <td>@instructor.FacebookAccountURL</td>
                                        <td>@instructor.InstagramAcoountURL</td>
                                        <td style="text-align: right;">
                                            <div style="display: inline-block;">
                                                <form method="get" action="/Instructor/UpdateInstructor">
                                                    <input type="hidden" name="InstructorId" value="@instructor.InstructorId" />
                                                    <button type="submit" class="btn btn-link text-reset fs-16 px-1">
                                                        <i class="ri-settings-3-line"></i>
                                                    </button>
                                                </form>
                                            </div>
                                            <div style="display: inline-block;">
                                                <form method="post" action="/Instructor/DeleteInstructor">
                                                    <input type="hidden" name="InstructorId" value="@instructor.InstructorId" />
                                                    <button type="submit" class="btn btn-link text-reset fs-16 px-1">
                                                        <i class="ri-delete-bin-2-line"></i>
                                                    </button>
                                                </form>
                                            </div>  <input value="@ViewBag.Message" id="bag" style="display:none;" />
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div> <!-- end table-responsive-->
                </div> <!-- end card body-->
            </div> <!-- end card -->
        </div><!-- end col-->
    </div><!-- end row-->
</div> <!-- container -->

<script>
    var data = document.getElementById("bag").value;
    console.log("DATA " + data);
    if (data == "Başarılı") {
        swal("Instructor Başarıyla Silindi", {
            icon: "success",
            button: "Tamam!",
        });
    } else if (data == "Başarısız") {
        swal("Hata oluştu daha sonra tekrar deneyin!", {
            icon: "error",
            button: "Tamam!",
        });
    }
</script>
