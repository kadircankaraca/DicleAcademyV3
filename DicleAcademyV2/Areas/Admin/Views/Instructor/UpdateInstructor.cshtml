@model InstructorsDto
<!-- Begin page -->
<!-- Start Content-->
<div class="container-fluid">

    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Admin</a></li>
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Course</a></li>
                        <li class="breadcrumb-item active">Course Göster</li>
                    </ol>
                </div>
                <h4 class="page-title">Course Göster</h4>
            </div>
        </div>
    </div>
    <!-- end page title -->

    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="header-title">Courses</h4>
                    <!--
                    <p class="text-muted mb-0">
                        Use <code>.table-striped</code> to add zebra-striping to any table row
                        within the <code>&lt;tbody&gt;</code>.
                    </p>
                    -->
                </div>
                <div class="card-body">
                    <div class="table-responsive-sm">
                        <table class="table table-striped table-centered mb-0">
                            <thead>
                                <tr>
                                    <th>Özellik</th>
                                    <th></th>
                                    <th>Değer</th>
                                </tr>
                            </thead>
                            <tbody>
                                <form method="post" action="/Instructor/UpdateInstructorPost" enctype="multipart/form-data">
                                <tr>
                                    <td>Eğitmen Adı</td>
                                    <td></td>
                                    <td><input style="width: 100%; max-width: 100%; resize: vertical;" type="text" name="InstructorName" value="@Model.InstructorName"></td>
                                </tr>
                                <tr>
                                    <td>Eğitmen Açıklaması</td>
                                    <td></td>
                                    <td><input style="width: 100%; max-width: 100%; resize: vertical;" type="text" name="InstructorDescription" value="@Model.InstructorDescription"></td>
                                </tr>
                                <tr>
                                    <td>Uzmanlık Alanı</td>
                                    <td></td>
                                    <td><input style="width: 100%; max-width: 100%; resize: vertical;" type="text" name="AreaOfExpertise" value="@Model.AreaOfExpertise"></td>
                                </tr>
                                <tr>
                                    <td>Fotoğraf</td>
                                    <td class="table-user">
                                        <img src="~/Images/InstructorImages/@Model.InstructorImage" alt="table-user"
                                             class="me-2 rounded-circle" />
                                    </td>
                                    <td>
                                        <input type="file" name="newImage" class="form-control">
                                    </td>
                                </tr>
                                <tr>
                                    <td>Twitter</td>
                                    <td></td>
                                    <td><input style="width: 100%; max-width: 100%; resize: vertical;" type="text" name="TwitterAccountURL" value="@Model.TwitterAccountURL"></td>
                                </tr>
                                <tr>
                                    <td>Facebook</td>
                                    <td></td>
                                    <td><input style="width: 100%; max-width: 100%; resize: vertical;" type="text" name="FacebookAccountURL" value="@Model.FacebookAccountURL"></td>
                                </tr>
                                <tr>
                                    <td>Instagram</td>
                                    <td></td>
                                    <td><input style="width: 100%; max-width: 100%; resize: vertical;" type="text" name="InstagramAcoountURL" value="@Model.InstagramAcoountURL"></td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td style="text-align: right;">
                                        <input type="hidden" name="InstructorId" value="@Model.InstructorId" />
                                        <button type="submit" class="btn btn-link text-reset fs-16 px-1">Onayla</button>
                                    </td>
                                </tr>
                                </form>
                            </tbody>
                            <input value="@ViewBag.Message" id="bag" style="display:none;" />
                        </table>
                    </div> <!-- end table-responsive-->
                </div>
            </div> <!-- end card -->
        </div><!-- end col-->
    </div>
    <!-- end row-->
</div> <!-- container -->
<!-- end Footer -->


<script>
    var data = document.getElementById("bag").value;
    console.log("DATA " + data);
    if (data == "Başarılı") {
        swal("Course Başarıyla Güncellendi", {
            icon: "success",
            button: "Tamam!",
        });
    } else if (data == "Başarısız") {
        swal("Hata oluştu daha sonra tekrar deneyin!", {
            icon: "error",
            button: "Tamam!",
        });
    }
</script>
