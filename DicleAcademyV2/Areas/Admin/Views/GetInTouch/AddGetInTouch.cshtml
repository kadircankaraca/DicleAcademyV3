<div class="container-fluid">
    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Admin</a></li>
                        <li class="breadcrumb-item"><a href="javascript: void(0);">GetInTouch</a></li>
                        <li class="breadcrumb-item active">GetInTouch Ekle</li>
                    </ol>
                </div>
                <h4 class="page-title">GetInTouch Ekle</h4>
            </div>
        </div>
    </div>
    <!-- end page title -->

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="header-title">GetInTouch</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <form action="/GetInTouch/AddGetInTouchPost" method="post" enctype="multipart/form-data">
                                <div class="mb-3">
                                    <label for="getInTouchTitle" class="form-label">Başlık(Tr)</label>
                                    <input type="text" id="getInTouchTitle" name="GetInTouchTitle" class="form-control">
                                </div>
                                <div class="mb-3">
                                    <label for="getInTouchTitleEn" class="form-label">Başlık(En)</label>
                                    <input type="text" id="getInTouchTitleEn" name="getInTouchTitleEn" class="form-control">
                                </div>
                                <div class="mb-3">
                                    <label for="getInTouchDescription" class="form-label">Açıklama</label>
                                    <input type="text" id="getInTouchDescription" name="GetInTouchDescription" class="form-control">
                                </div>
                                <div class="mb-3">
                                    <label for="getInTouchDescriptionEn" class="form-label">Açıklama</label>
                                    <input type="text" id="getInTouchDescriptionEn" name="GetInTouchDescriptionEn" class="form-control">
                                </div>
                                <div class="mb-3">
                                    <label for="address" class="form-label">Adres</label>
                                    <input type="text" id="address" name="Adress" class="form-control">
                                </div>
                                <div class="mb-3">
                                    <label for="phoneNumber" class="form-label">Telefon Numarası</label>
                                    <input type="text" id="phoneNumber" name="PhoneNumber" class="form-control">
                                </div>
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="email" id="email" name="Email" class="form-control">
                                </div>
                                <div style="text-align: right;">
                                    <button type="submit" class="btn btn-primary">Ekle</button>
                                </div>
                            </form>
                        </div> <input value="@ViewBag.Message" id="bag" style="display:none;" />
                    </div>
                    <!-- end row-->
                </div> <!-- end card-body -->
            </div> <!-- end card -->
        </div><!-- end col -->
    </div><!-- end row -->
</div> <!-- container -->

<script>
    var data = document.getElementById("bag").value;
    console.log("DATA " + data);
    if (data == "Başarılı") {
        swal("GetInTouch Başarıyla Eklendi", {
            icon: "success",
            button: "Tamam!",
        });
    } else if (data == "Başarısız") {
        swal("Hata oluştu daha sonra tekrar deneyin!", {
            icon: "error",
            button: "Tamam!",
        });
    }
</script>