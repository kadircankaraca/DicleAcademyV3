@model StudentsSayDto

<div class="container-fluid">

    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Admin</a></li>
                        <li class="breadcrumb-item"><a href="javascript: void(0);">StudentsSay</a></li>
                        <li class="breadcrumb-item active">StudentsSay Güncelle</li>
                    </ol>
                </div>
                <h4 class="page-title">StudentsSay Güncelle</h4>
            </div>
        </div>
    </div>
    <!-- end page title -->

    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="header-title">StudentsSay</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive-sm">
                        <table class="table table-striped table-centered mb-0">
                            <thead>
                                <tr>
                                    <th>Özellik</th>
                                    <th></th>
                                    <th>Değer</th>
                                </tr>
                            </thead>
                            <tbody>
                                <form method="post" action="/StudentsSay/UpdateStudentsSayPost" enctype="multipart/form-data">
                                <tr>
                                    <td>Ad</td>
                                    <td></td>
                                    <td><input style="width: 100%; max-width: 100%; resize: vertical;" type="text" name="StudentName" value="@Model.StudentName"></td>
                                </tr>
                                <tr>
                                    <td>Soyad</td>
                                    <td></td>
                                    <td><input style="width: 100%; max-width: 100%; resize: vertical;" type="text" name="StudentSurname" value="@Model.StudentSurname"></td>
                                </tr><tr>
                                    <td>Başlık</td>
                                    <td></td>
                                    <td><input style="width: 100%; max-width: 100%; resize: vertical;" type="text" name="StudentsSayTitle" value="@Model.StudentsSayTitle"></td>
                                </tr>
                                <tr>
                                    <td>Açıklama</td>
                                    <td></td>
                                    <td>
                                        <textarea name="StudentsSayDescription" style="width: 100%; max-width: 100%; min-height: 100px; resize: vertical;">@Model.StudentsSayDescription
                                        </textarea>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Fotoğraf</td>
                                    <td class="table-user">
                                        <img src="~/Images/StudentsSayImages/@Model.StudentsSayImage" alt="table-user"
                                             class="me-2 rounded-circle" />
                                    </td>
                                    <td>
                                        <input type="file" name="newImage" class="form-control">
                                    </td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td style="text-align: right;">
                                        <input type="hidden" name="StudentsSayId" value="@Model.StudentsSayId" />
                                        <button type="submit" class="btn btn-link text-reset fs-16 px-1">Onayla</button>
                                    </td>
                                </tr>
                                </form>
                            </tbody>
                        </table>
                    </div> <!-- end table-responsive-->
                </div>
            </div> <!-- end card -->
        </div><!-- end col-->
    </div>
    <!-- end row-->
</div> <!-- container -->
<!-- end Footer -->
