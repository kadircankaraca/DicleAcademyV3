@model Tuple<List<GalleryDto>, List<ContactDto>>
<div class="container-fluid bg-dark text-light footer pt-5 mt-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="row g-5">
            <div class="col-lg-3 col-md-6">
                <h4 class="text-white mb-3">Quick Link</h4>
                <a class="btn btn-link" href="@Url.Action("Index", "Aboute")">About Us</a>
                <a class="btn btn-link" href="@Url.Action("Index", "Contact")">Contact Us</a>
                <a class="btn btn-link" href="@Url.Action("Index", "Aboute")">FAQs & Help</a>
            </div>
            @foreach(var item2 in Model.Item2)
            {
               
                <div class="col-lg-3 col-md-6" id =@item2.ContactId>
                    <h4 class="text-white mb-3">Contact</h4>
                    <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>@item2.Adress</p>
                    <p class="mb-2"><i class="fa fa-phone-alt me-3"></i>@item2.PhoneNumber</p>
                    <p class="mb-2"><i class="fa fa-envelope me-3"></i>@item2.Email</p>
                    <div class="d-flex pt-2">
                        <a class="btn btn-outline-light btn-social" href=@item2.TwitterAccount><i class="fab fa-twitter"></i></a>
                        <a class="btn btn-outline-light btn-social" href=@item2.FacebookAccount><i class="fab fa-facebook-f"></i></a>
                        <a class="btn btn-outline-light btn-social" href=@item2.YoutubeAccount><i class="fab fa-youtube"></i></a>
                        <a class="btn btn-outline-light btn-social" href=@item2.LinkedInAccount><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
            }
            
            <div class="col-lg-3 col-md-6">
                <h4 class="text-white mb-3">Gallery</h4>
                <div class="row g-2 pt-2">
                    @foreach(var item in Model.Item1)

                    {
                        <div class="col-4" id =@item.GalleryId>
                            <img class="img-fluid bg-light p-1" src="~/assets/img/@item.GalleryImage" alt="">
                        </div>
                    }
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <h4 class="text-white mb-3">Newsletter</h4>
                <p>Dolor amet sit justo amet elitr clita ipsum elitr est.</p>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="copyright">
            <div class="row">
                <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                    &copy; <a class="border-bottom" href="#">DicleDevAcademy</a>, All Right Reserved.
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <div class="footer-menu">
                        <a asp-action="Index" asp-controller="Home">Home</a>
                        <a href="">Cookies</a>
                        <a asp-action="Index" asp-controller="Contact">Help</a>
                        <a asp-action="Index" asp-controller="Aboute">FQAs</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>